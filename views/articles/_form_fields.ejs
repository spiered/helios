<div class="form-group">
  <label for="title">Titre</label>
  <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control" />
</div>
<div class="form-group">
  <label for="description">Description</label>
  <textarea name="description" id="description" class="form-control" required>
<%= article.description %></textarea>
</div>
<div class="form-group">
  <label for="markdown">Contenu</label>
  <textarea required name="markdown" id="markdown" class="form-control" required>
<%= article.markdown %></textarea>
</div>
<button type="submit" class="btn btn-outline-primary">Publier</button>
<a href="/" class="btn btn-outline-secondary">Annuler</a>