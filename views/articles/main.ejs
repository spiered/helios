<!DOCTYPE html>
<html>
  <head>
    <!-- CSS only -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
      crossorigin="anonymous"
    />

    <!-- JS, Popper.js, and jQuery -->
    <script
      src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
      integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://kit.fontawesome.com/f17c63a442.js"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="style.css" />

    <title>Helios</title>
  </head>

  <body>
    <div class="container">
      <h1 class="mb-4 blog-title text-center">kartes</h1>
      <hr />
      <a href="/articles/new" class="btn btn-outline-dark btn-sm"
        ><i class="fas fa-plus-circle"></i> Nouvel Article</a
      >
      <% articles.forEach((article,index) =>{ %> <% if(index != 0){ %>
      <div class="card mt-4">
        <div class="card-body">
          <h4 class="card-title"><%= article.title %></h4>
          <div class="card-subtitle text-muted mb-3">
            <%= article.createdAt.toLocaleDateString() %>
          </div>
          <div class="card-text mb-2">
            <%= article.description %>
          </div>
          <hr />
          <a
            class="btn btn-outline-primary btn-sm"
            href="articles/<%= article.slug %>"
            ><i class="fas fa-align-left"></i> Consulter</a
          >
          <a
            class="btn btn-outline-info btn-sm"
            href="articles/edit/<%= article.id %>"
            >Modifier</a
          >
          <form
            action="/articles/<%= article.id %>?_method=DELETE"
            method="POST"
            class="d-inline"
          >
            <button type="submit" class="btn btn-outline-danger btn-sm">
              <i class="fas fa-trash-alt"></i> Supprimer
            </button>
          </form>
        </div>
      </div>
      <% }else if(index == 0){ %>
      <div class="mt-4 jumbotron p-4 p-md-5 text-dark rounded bg-light">
        <div class="col-md-6 px-0">
          <h4 class="display-4"><%= article.title %></h4>
          <hr />
          <p class="lead txt my-3"><%= article.description %></p>
          <hr />
          <a class="btn btn-outline-primary" href="articles/<%= article.slug %>"
            ><i class="fas fa-align-left"></i> Consulter</a
          >
          <a class="btn btn-outline-info" href="articles/edit/<%= article.id %>"
            ><i class="fas fa-edit"></i> Modifier</a
          >
          <form
            action="/articles/<%= article.id %>?_method=DELETE"
            method="POST"
            class="d-inline"
          >
            <button type="submit" class="btn btn-outline-danger">
              <i class="fas fa-trash-alt"></i> Supprimer
            </button>
          </form>
        </div>
      </div>
      <% } %> <%}) %>
      <a href="/articles/archives/" class="btn btn-outline-dark"
        ><i class="fas fa-archive"></i> Archives</a
      >
    </div>
  </body>
</html>
